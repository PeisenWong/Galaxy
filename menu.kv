<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_text
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
    Button:
        font_size: dp(25)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_button_text
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        size_hint: .2, .15
        on_press: root.parent.on_menu_button_press() # Refer to main.py
        background_normal: ''  # Remove the default button colour to avoid mixing
        background_color: 1, .3, .4, .85